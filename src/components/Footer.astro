---
import { SITE_AUTHOR } from '../consts'
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} {SITE_AUTHOR}. All rights reserved.
</footer>
<style>
	footer {
		color: var(--text-subtitle);
		font-size: 14px;
    	line-height: 54px;
		text-align: center;
		margin-top: 4rem;
	}

	@media (max-width: 767px) {
		footer {
			margin-top: 2.5rem;
		}
    }
</style>
