---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header client:only="react" />

		<div class='not-found-container w-full flex flex-col items-center justify-center'>
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: var(--text-subtitle);width: 7.5em;height: auto;transform: ;msFilter:;"><path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"></path><circle cx="8.5" cy="10.5" r="1.5"></circle><circle cx="15.493" cy="10.493" r="1.493"></circle><path d="M12 14c-3 0-4 3-4 3h8s-1-3-4-3z"></path></svg>
			<h1 class='text-9xl font-bold text-[color:var(--decoration)]'>404</h1>
			<p class='text-[color:var(--text-subtitle)]'>Sorry, we have nothing to show here</p>
		</div>
		
		<Footer />
	</body>

	<style>
		.not-found-container {
			height: calc(100svh - 55px * 2 - 64px);
      margin-top: 55px;
		}
    @media (max-width: 767px) {
      .not-found-container {
        height: calc(100svh - 55px * 2 - 40px);
      }
    }
	</style>
</html>
